<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.movieapp.presentation.splash_screen.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_movies_fragment"
            app:destination="@id/moviesFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.movieapp.presentation.movies_fragment.TopRatedMoviesFragment"
        android:label="MovieDetailFragment"
        tools:layout="@layout/movies_fragment">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieapp.presentation.detail_screen.MovieDetailFragment"
        android:label="movie_detail_fragment"
        tools:layout="@layout/movie_detail_fragment">
        <action
            android:id="@+id/action_movieDetailFragment_to_movies_fragment"
            app:destination="@id/moviesFragment"
            app:popUpTo="@id/movieDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>